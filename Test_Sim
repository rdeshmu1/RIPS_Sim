clear; clc;

m=5; % kg
g=-9.81; % kg/m2
rho=1.2; % kg/m^3
%rho=linspace(1.2,10,101);
Cd=.4; %drag coeff
A=.09; %m^2

c=1/2.*rho*Cd*A; %drag force constant

%Time step
z= 100
v=zeros(1,length(z)); % Speed
F=zeros(1,length(z)); %force of drag
a=zeros(1,length(z)); %total accel
x=zeros(1,length(z));

v(1)=-4000;

deltat=1;

for i=1:99
    
    if (c*v(i)^2)>abs(m*g)
        F(i) = m*g;
    else
        F(i) = c * v(i)^2;
    end
    
    a(i) = (-g+F(i)/m);
    
    v(i+1)=v(i)+deltat*a(i);
    
    %x(i+1) = x(i) + v(i+1)*delta_t + 1/2*a(i+1)*delta_t^2;
    
    
end

plot(v)


